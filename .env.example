# Central Intelligence Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_PATH=./data/registry.db
DATABASE_URL=postgresql://user:password@host:port/database  # For cloud deployment

# Server Configuration
NODE_ENV=development  # development | production | test
PORT=3000
HOST=0.0.0.0

# MCP Configuration
MCP_TRANSPORT=stdio  # stdio | websocket | http
MCP_LOG_LEVEL=info   # debug | info | warn | error

# Authentication (Future - Cloud Only)
# API_KEY_SECRET=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# Cloud Storage (Future)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_REGION=us-east-1
# S3_BUCKET=central-intelligence-context

# Redis (Future - Cloud Only)
# REDIS_URL=redis://localhost:6379

# Monitoring (Future)
# SENTRY_DSN=https://...
# DATADOG_API_KEY=your-key

# Self-Healing Configuration
AUTO_HEAL_ENABLED=true
HEALTH_CHECK_INTERVAL=300  # seconds (5 minutes)
ZOMBIE_TIMEOUT=300         # seconds (5 minutes)
STUCK_TASK_HOURS=24        # hours
ACTIVITY_LOG_LIMIT=10000   # entries to keep

# Performance Configuration
CONTEXT_SCAN_TIMEOUT=30    # seconds
MAX_FILE_SIZE=10485760     # bytes (10MB)
MAX_FILES_PER_DIR=500
MAX_RECURSION_DEPTH=10

# Feature Flags
ENABLE_DISCOVERY=true
ENABLE_SELF_HEALING=true
ENABLE_GIT_VERIFICATION=true
ENABLE_MULTI_PROJECT=true
