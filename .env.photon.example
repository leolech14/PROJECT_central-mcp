# üöÄ PHOTON Cloud Operations Center Configuration
# ===================================================
# Copy this file to .env and customize for your environment

# Environment Settings
NODE_ENV=development
PHOTON_LOG_LEVEL=debug

# Server Configuration
PHOTON_PORT=8080
PHOTON_DB_PATH=./data/photon.db

# CORS Configuration (comma-separated origins)
PHOTON_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
PHOTON_RATE_WINDOW_MS=900000
PHOTON_RATE_MAX=1000

# Authentication (DISABLE FOR DEVELOPMENT, ENABLE FOR PRODUCTION)
PHOTON_AUTH_ENABLED=false
PHOTON_API_KEY_HEADER=X-API-Key
PHOTON_API_KEYS=photon-dev-key,test-key-123
PHOTON_ADMIN_KEY=photon-admin-key

# SSL Configuration (for production)
PHOTON_SSL_ENABLED=false
PHOTON_SSL_CERT_PATH=/path/to/cert.pem
PHOTON_SSL_KEY_PATH=/path/to/key.pem

# Monitoring
PHOTON_MONITORING_ENABLED=true
PHOTON_METRICS_INTERVAL=30000
PHOTON_HEALTH_CHECK_INTERVAL=60000

# üåê Cloud Platform API Keys
# Add your API keys for different platforms

# Cursor API
CURSOR_API_KEY=your-cursor-api-key
CURSOR_ENDPOINT=https://api.cursor.sh

# Claude Code CLI
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_ENDPOINT=https://api.anthropic.com

# Gemini API
GEMINI_API_KEY=your-gemini-api-key
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com

# Z.AI Platform
ZAI_API_KEY=your-zai-api-key
ZAI_ENDPOINT=https://api.z.ai

# üìä Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3001

# üì® Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# ‚òÅÔ∏è Cloud Provider Settings

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account.json

# Azure
AZURE_SUBSCRIPTION_ID=your-azure-subscription
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# üîí Additional Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-too

# üìà Performance Settings
MAX_CONCURRENT_OPERATIONS=1000
OPERATION_TIMEOUT=300000
AGENT_HEARTBEAT_TIMEOUT=300000

# üíæ Database Settings (if using PostgreSQL instead of SQLite)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=photon
POSTGRES_USER=photon
POSTGRES_PASSWORD=your-postgres-password

# üîÑ Cache Settings (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# üì± Mobile Configuration (for mobile agents)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# üß™ Development Settings
DEBUG_PHOTON=true
ENABLE_MOCK_PLATFORMS=true
MOCK_RESPONSES=true

# üåç Deployment Settings
DEPLOYMENT_ENV=local
KUBERNETES_NAMESPACE=photon
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# üìö Documentation
DOCS_ENABLED=true
DOCS_PORT=8081
API_DOCS_ENABLED=true

# üéØ Experimental Features
EXPERIMENTAL_FEATURES=false
QUANTUM_COORDINATION=false
AI_PREDICTION=false
AUTO_SCALING=true